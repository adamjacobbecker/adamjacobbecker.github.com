@media (min-width: 767px)

  #sidebar
    width 250px
    position fixed

    p.description
      margin-bottom 10px

    .sidebar-nav

      .info
        padding 0 10px 0 50px

      #avatar
        float none
        margin 10px 0

      ul.personal-links
        text-align left

  .sidebar-nav-fixed
    position fixed
    width 250px

  #content
    ol#posts
      li.post
        &.nav
          padding-top 40px

  #content #post-wrapper
    margin-left 250px

  .modal
    position fixed
    top 0
    left -250px
    background #fff
    margin 0
    border-radius 0
    height 100%
    overflow auto
    width 400px
    border-right 1px solid $text-color
    transition(left 0.3s linear)

    &.in
      left 250px
